				config = "sec-cfg.yaml";
				schema = "../../ti/common/schema.yaml";
			};
			pm-cfg {
				config = "pm-cfg.yaml";
				schema = "../../ti/common/schema.yaml";
			};
			rm-cfg {
				config = "rm-cfg.yaml";
				schema = "../../ti/common/schema.yaml";
			};
		};
	};
